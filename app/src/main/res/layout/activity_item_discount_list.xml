<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/discountImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/discountNameTextView"
        app:srcCompat="@drawable/shoe1"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/discountNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/discountImageView"
        android:paddingStart="10dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/discountShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/discountImageView"
        android:paddingStart="10dp"
        android:text="@string/shop"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/discountPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/discountImageView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/discountImageView"
        android:paddingStart="13dp"
        android:text="@string/price"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>
